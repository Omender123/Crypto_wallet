<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".TopUp.EnterTop_Up">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/toolbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:text="Topup Money"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/verifying_textview"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/bank24"
                android:hint="   Bank Name"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/toolbar_text_color" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:background="@drawable/verifying_textview"
                android:drawableStart="@drawable/number_24"
                android:hint="   Number"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/toolbar_text_color" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/verifying_textview"
                android:drawableStart="@drawable/number_24"
                android:drawablePadding="10dp"
                android:hint="   Confirm Number"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/toolbar_text_color" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/verifying_textview"
                android:drawableStart="@drawable/dollar_24"
                android:drawablePadding="10dp"
                android:hint="Amount"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/toolbar_text_color" />

            <Button
                android:id="@+id/show_dailog"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="20dp"
                android:text="Done"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>