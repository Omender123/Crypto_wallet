<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Graph_layout"
        android:background="@color/background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:paddingBottom="20dp">

          <RelativeLayout
       android:id="@+id/real"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:background="@color/graph"
       android:layout_alignParentEnd="true"
       android:layout_marginStart="0dp"
       android:layout_marginEnd="0dp"
       >

       <ImageView
           android:id="@+id/back"
           style="bold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_baseline_arrow_back_24"
           app:tint="@color/graph_icon_color" />

       <LinearLayout
           android:id="@+id/linear"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginTop="10dp"
           android:layout_toEndOf="@id/back"
           android:layout_alignParentEnd="true"
           >

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/coinImage"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@mipmap/ic_launcher"
               android:layout_marginRight="30dp"/>
       </LinearLayout>
      <!-- <ImageView
           android:id="@+id/graphcoinImage"
           android:layout_width="30dp"
           android:layout_height="30dp"

           android:layout_marginTop="5dp"
           android:layout_marginEnd="0dp"

           android:src="@mipmap/bitcoin_image" />-->


       <LinearLayout
           android:id="@+id/linear1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/linear"
           android:gravity="center"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/coinName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bitcoin"
               android:textAlignment="center"
               android:textSize="15dp"
               />

           <TextView
               android:id="@+id/coinsymbols"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/linear"
               android:layout_alignParentRight="true"
               android:layout_toEndOf="@+id/text_bitcoin"
               android:gravity="center"
               android:text="(BTC)"
               android:textAlignment="center"
               android:textSize="15dp"
               android:textAllCaps="true"/>

       </LinearLayout>

      <ImageView
           android:id="@+id/receive_coin"
           android:layout_width="70dp"
           android:layout_height="50dp"
           android:layout_below="@+id/linear1"
           android:layout_alignParentEnd="true"
           android:scaleType="fitXY"
           android:src="@drawable/ic_receive" />


       <ImageView
           android:id="@+id/send_coin"
           android:layout_width="70dp"
           android:layout_height="50dp"
           android:layout_below="@id/linear1"
           android:scaleType="fitXY"
           android:src="@drawable/ic_send" />

       <TextView
           android:id="@+id/coinPrice"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/linear1"
           android:layout_marginTop="3dp"
           android:layout_toStartOf="@+id/receive_coin"
           android:layout_toEndOf="@+id/send_coin"
           android:fontFamily="@font/montserrat"

           android:textAlignment="center"
            android:textColor="@color/toolbar_text_color"
                          
           android:textSize="15dp"
           android:textStyle="bold" />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/coinPrice"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_toStartOf="@+id/receive_coin"
           android:layout_toEndOf="@+id/send_coin">
         <!--  <TextView
               android:id="@+id/sync"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="IMT Price "
               android:textAppearance="@style/TextAppearance.AppCompat.Body1"
               android:fontFamily="@font/montserrat"
               android:textColor="@color/white"
               android:textSize="15dp" />
-->
           <TextView
               android:id="@+id/increaseRate"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:text="+0.01"
               android:maxLength="5"
               android:textAppearance="@style/TextAppearance.AppCompat.Body1"
               android:textColor="@color/green"
               android:textSize="13dp" />
           <TextView
               android:id="@+id/null1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="%"
               android:drawablePadding="1dp"
               android:textSize="13dp"
               android:textColor="@color/green"  android:textAppearance="@style/TextAppearance.AppCompat.Body1"
               android:layout_marginRight="10dp"/>

       </LinearLayout>

   </RelativeLayout>

   <com.github.mikephil.charting.charts.LineChart
       android:id="@+id/cubiclinechart"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_below="@id/real"
       android:layout_marginLeft="-10dp"
       android:layout_marginRight="-10dp"
       android:layout_alignParentStart="true"
       />

  <LinearLayout
       android:id="@+id/label_chart"
       android:layout_below="@id/cubiclinechart"
       android:background="@color/background"
       android:layout_width="match_parent"
       android:layout_height="50dp">
       <LinearLayout
           android:id="@+id/label_chartB"
           android:layout_below="@id/chart"
           android:background="@color/background"
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="40dp"
           android:gravity="center"
           android:layout_marginLeft="2dp"
           android:layout_marginRight="2dp"
           android:weightSum="6">

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:id="@+id/h_24"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/toolbar_text_color"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:text="24H"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:id="@+id/d_7"
               android:gravity="center"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:textColor="@color/toolbar_text_color"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:text="7D"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:id="@+id/m_1"
               android:gravity="center"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:textColor="@color/toolbar_text_color"
                          
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:text="1M"/>
           </LinearLayout>
           <LinearLayout

               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:id="@+id/m_3"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:textColor="@color/toolbar_text_color"
                          
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:text="3M"/>
           </LinearLayout>
           <LinearLayout

               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:id="@+id/m_6"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:textColor="@color/toolbar_text_color"
                          
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:text="6M"/>
           </LinearLayout>
           <LinearLayout

               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:id="@+id/y_1"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:textColor="@color/toolbar_text_color"
                          
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:text="1Y"/>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>



   <LinearLayout
       android:id="@+id/overview"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/over"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_below="@id/label_chart"
       app:layout_constraintVertical_bias="0.031"
       tools:layout_editor_absoluteX="5dp">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="12dp"
           android:text="@string/overview"
           android:textAlignment="textStart"
           android:textColor="#9a9a9a"
           android:textSize="15dp"
           android:textStyle="bold"

           tools:layout_editor_absoluteX="5dp" />
   </LinearLayout>
   <androidx.cardview.widget.CardView
       android:id="@+id/cardviewvali"
       app:cardCornerRadius="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
      app:cardBackgroundColor="@color/card_background"
       android:layout_below="@id/overview"
       >
       <LinearLayout

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="3"
           android:gravity="center"
           android:padding="10dp"
           android:layout_margin="5dp"
           android:layout_gravity="center"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginRight="20dp"
               android:layout_gravity="center"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/price"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@color/card_background"
                   android:textSize="25dp"
                   android:fontFamily="@font/montserrat"
                   android:layout_marginTop="5dp"
                   android:maxLength="6"
                    android:textColor="@color/toolbar_text_color"
                   android:textStyle="bold"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/price"
                   android:layout_marginTop="-5dp"
                   android:textAlignment="center"
                   android:textStyle="normal"
                    android:textColor="@color/toolbar_text_color"
                          
                   android:textSize="15dp"
                   />
           </LinearLayout>


           <View
               android:layout_width="2dp"
               android:layout_height="match_parent"

               android:background="#c3c3c3"
               />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginLeft="20dp"
               android:layout_gravity="center"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/balance"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@color/card_background"

                   android:textSize="25dp"
                   android:fontFamily="@font/montserrat"
                   android:layout_marginTop="5dp"
                   android:textAlignment="center"
                    android:textColor="@color/bal_color"
                          
                   android:textStyle="bold"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="-5dp"
                   android:text="@string/balance"
                   android:textAlignment="center"
                   android:textStyle="normal"
                    android:textColor="@color/toolbar_text_color"
                          
                   android:textSize="15dp"
                   />
           </LinearLayout>
       </LinearLayout>

   </androidx.cardview.widget.CardView>


   <TextView
       android:id="@+id/swap_btc_btn"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_below="@id/cardviewvali"
       android:layout_gravity="center"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="40dp"
       android:layout_marginRight="50dp"
       android:background="@drawable/button_border"
       android:gravity="center"
       android:text="@string/swap_p2p"
       android:textSize="15dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent"
            android:textSize="13dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/moretransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:textSize="13sp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_blue_dark"
            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_list_is_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_margin="16dp"
            android:elevation="10dp"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/recent_txt"
            android:textColor="@color/toolbar_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>


</ScrollView>