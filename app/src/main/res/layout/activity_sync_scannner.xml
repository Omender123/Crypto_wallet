<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Sync_scannner">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scannerView1"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="300dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@android:color/white"
        app:frameCornersRadius="0dp"
        app:frameCornersSize="50dp"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maskColor="#77000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scannerView1"
        android:layout_alignParentBottom="true"

        android:orientation="vertical"
        android:weightSum="3">
        <TextView
            android:id="@+id/scan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/scannerView1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/scanqr"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/scantext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scan1"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:maxLines="3"
            android:text="@string/scandes" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scantext2"
         android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/scantext2"
                  android:gravity="center"
                android:background="@drawable/verifying_textview"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_settings_24"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="Setting"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="Device"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/sync"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_border"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="Sync"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/display"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Learn More" />
    </LinearLayout>

</RelativeLayout>