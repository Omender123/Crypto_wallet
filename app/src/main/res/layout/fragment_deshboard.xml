<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".fragement.Deshboard">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/first">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_amount"
            android:textColor="#242424"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--.--"
            android:textSize="30dp"
            android:textColor="#242424"

            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>/>

        <TextView
            android:id="@+id/balance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$--.--"
            android:textSize="15dp"
            android:textColor="#242424"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/multiOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/lytScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!--  <View
                      android:id="@+id/v1"
                      android:layout_width="match_parent"
                      android:layout_height="5dp"
                      android:background="@color/colorPrimaryDark" />-->

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"

                    android:src="@drawable/ic_scan" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/scan"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <!--<View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/white" />-->

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_pay" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/recieve"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="15dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lytwallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!--<View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/white" />-->

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_walet" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/balance"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lytaddMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!--<View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/white" />-->

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_add_money" />

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/add_money"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cryptoinfo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/ImtSmart"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/background1"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background1">
                    <ImageView
                        android:id="@+id/coinImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/imt" />

                    <TextView
                        android:id="@+id/increaseRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="25dp"
                        android:layout_toStartOf="@+id/null1"
                        android:layout_toLeftOf="@+id/null1"
                        android:drawablePadding="1dp"
                        android:maxLength="5"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/green"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/null1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="25dp"
                        android:drawablePadding="1dp"
                        android:textSize="15dp"
                        android:textColor="@color/green"  android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginRight="10dp"/>
                    <!--    android:drawableLeft="@drawable/ic_long_arrow_pointing_up"-->


                    <TextView
                        android:id="@+id/coinname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/coinImage"
                        android:text="ImSmart"
                        android:textColor="@color/toolbar_text_color"
                        android:textSize="15dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                    <TextView
                        android:id="@+id/coinrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/coinname"
                        android:textColor="@color/toolbar_text_color"
                        android:maxLength="6"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                    <ImageView
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@mipmap/wave"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/coinrate"
                        />
                    <!--<lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/coinrate"
                        />-->
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/deshboardRecyclerView"
                android:layout_width="1380dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </HorizontalScrollView>



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/overview"
        android:textSize="15dp" />


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/overviewRecycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Add_more_Currency"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_border"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:text="@string/add_more"
        android:textColor="@color/toolbar_text_color"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />



</LinearLayout>

</ScrollView>