                       android:textColor="@color/black"
                       android:imeOptions="actionNext"
                       android:textColorHint="@android:color/darker_gray"
                      
                       android:maxLength="1"
                       android:background="@drawable/edittext_curve_bg" />

               </LinearLayout>


