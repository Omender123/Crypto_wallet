                       android:maxLength="1"
                       android:background="@drawable/edittext_curve_bg" />

                   <EditText
                       android:id="@+id/otp_edit_box5"
                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:imeOptions="actionNext"
                       android:gravity="center"
