<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
android:orientation="vertical"
    tools:context=".Offer.Offer">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/toolbar"
    android:gravity="center"
    android:orientation="horizontal">
    <!--<ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content"
        android:onClick="back"
        android:src="@drawable/ic_baseline_arrow_back_24"/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:onClick="back"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="@string/offer"
        android:textColor="@color/white"
        android:id="@+id/toolbar_title" />
</LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="20dp"
        android:elevation="5dp"
        >
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_artboard___5"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/offer_name"
                android:text="Offer Name"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="100dp"
                android:textSize="28dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/offer_shortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Before adding money into your wallet, Up To"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/offer_name"/>
            <TextView
                android:id="@+id/offer_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Date : 26 Jan 2021"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="15dp"
               android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
<!--<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/Offer_RecyclerView"
    android:layout_width="match_parent"
     android:layout_marginTop="5dp"
    android:layout_height="match_parent"/>-->
</LinearLayout>