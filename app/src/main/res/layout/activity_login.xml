<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/login_layout"
    tools:context=".login.Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:scaleType="fitXY"
        android:src="@mipmap/backgroun_image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp">
            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:text="@string/login"
                android:textColor="@color/purple_500"
                android:textSize="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:text="@string/sign_up"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/hello"
            android:textColor="@color/toolbar"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hello"
            android:text="@string/welcome_back"
            android:textColor="@color/toolbar"
            android:textStyle="bold"
            android:textSize="24dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginLeft="20dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/user"
                    android:layout_below="@id/welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username"
                    style="@style/OutlineBox"
                    android:layout_margin="20dp">
                    <EditText
                        android:id="@+id/ed_username1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textColor="@color/toolbar"
                        android:inputType="text"
                        android:drawableLeft="@drawable/ic_user_name"
                        android:drawableStart="@drawable/ic_user_name"
                        android:textCursorDrawable="@null"
                        android:drawablePadding="10dp"
                        android:drawableTint="@android:color/darker_gray"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/user"
                    android:hint="@string/password"
                    app:passwordToggleTint="@android:color/darker_gray"
                    style="@style/OutlineBox"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/ed_password1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:drawableLeft="@drawable/ic_passcode"
                        android:drawableStart="@drawable/ic_passcode"
                        android:textCursorDrawable="@null"
                        android:drawablePadding="10dp"
                        android:textColor="@color/toolbar"
                        android:drawableTint="@android:color/darker_gray"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/user"
                    android:visibility="gone"
                    android:hint="Enter your OTP"
                    app:passwordToggleTint="@android:color/darker_gray"
                    style="@style/OutlineBox"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/ed_otp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textCursorDrawable="@null"
                        android:drawablePadding="10dp"
                        android:textColor="@color/toolbar"
                        android:drawableTint="@android:color/darker_gray"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pass"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/forget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forget"
                        android:layout_alignParentLeft="true"
                        android:textColor="#044B7F"/>
                    <TextView
                        android:id="@+id/unlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unlock Account"
                        android:layout_alignParentRight="true"
                        android:textColor="#044B7F"/>
                </RelativeLayout>


                <Button
                    android:id="@+id/login1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/forget"
                    android:text="@string/ready"
                    android:textColor="#242424"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button"
                    android:textAllCaps="false"
                    android:layout_margin="20dp"/>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>